<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/find_friends_layout" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abubakrsokarno.chaty.FindFriendsActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/search_bar"/>

    <EditText
        android:id="@+id/search_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:width="300dp"
        android:ems="10"
        android:hint="Search by email"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/search_friend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:width="150dp"
        android:text="Search" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/users_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_friend_btn"
        android:layout_marginTop="29dp" />


</RelativeLayout>
