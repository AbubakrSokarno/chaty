<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.abubakrsokarno.chaty.ChangeStatusActivity">

    <include
        android:id="@+id/status_app_bar"
        layout="@layout/app_bar_layout">

    </include>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/status_txtInp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_app_bar"
        android:layout_marginTop="14dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/status_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/my_words"
            android:textColor="@android:color/background_dark"
            android:textColorLink="@android:color/background_dark" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/save_status_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/status_txtInp"
        android:layout_marginTop="14dp"
        android:width="150dp"
        android:background="@android:color/holo_orange_dark"
        android:text="@string/save_my_words" />

</RelativeLayout>
